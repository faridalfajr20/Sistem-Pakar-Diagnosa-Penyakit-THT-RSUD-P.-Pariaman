                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="9dp"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="1dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
