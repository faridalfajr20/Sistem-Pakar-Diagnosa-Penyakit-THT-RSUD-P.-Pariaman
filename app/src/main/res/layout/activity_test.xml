<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:src="@drawable/hospital" />

    <TextView
        android:id="@+id/textViewNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:text="RSUD Padang Pariaman"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNama"
        android:layout_centerHorizontal="true"
        android:text="Jl. Jendral Sudirman No. 123"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewNomorTelepon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAlamat"
        android:layout_centerHorizontal="true"
        android:text="(021) 1234567"
        android:textSize="14sp" />

</RelativeLayout>
